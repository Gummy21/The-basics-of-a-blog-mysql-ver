<%- include ('partials/header') %>
<div id="show">
<div class="ui raised very padded container segment">
    <div class="ui left aligned container">
        <h1 class="ui header"><%= blog.title %></h1>
    </div>
    <div class="ui center aligned basic segment">
        <p id="show_c"><%= blog.content %></p>
    </div>
    
         <div class="ui buttons">
            <% if(currentUser && blog.author.id.equals(currentUser._id)) { %>
                     <a class="ui orange button" href="/blog/<%= blog._id %>/edit">Edit</a>
                     <div class="or"></div>
                     <form id="delete" action="/blog/<%= blog._id%>?_method=DELETE" method="POST">
                         <button class="ui red button">Delete</button>
                        </form>   
                       
                 </div>
              <% } %>
              <a id="likeBtn" href="#"><i class="like icon"></i></a>
      </div>
</div>
<%- include ('partials/footer') %>