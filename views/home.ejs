<%- include ('partials/header') %>
    
<div class="ui container center aligned very padded">
        <div class="ui basic segment">
            <h1 class="ui header">Blog display</h1>
            <a href="/blog/new" class="ui blue button">Create a blog</a> 
        </div>
    <div class="ui grid">
            <% blogs.forEach(function(blog){ %>
            <div class="five wide column">
                 <div class="ui items ">
                    <div class="ui middle aligned content ">
                        <h4 class="header"><%= blog.title %></h4>
                        <div class="description"></div>
                            <!-- <summary>Created by <#%= blog.author.username %></summary> -->
                        </div>
                        <a href="/blog/<%=blog._id %>" class="ui small basic button very padded">See full</a> 
                </div>
            </div>
            <% }) %>

            </div>
        </div>      
    </div>
</div>
<%- include ('partials/footer') %>