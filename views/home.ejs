<%- include ('partials/header') %>
<div class="ui container center aligned very padded">
        <div class="ui basic segment">
            <h1 class="ui header">Blog display</h1>
            <a href="/blog/new" class="ui blue button">Create a blog</a> 
        </div>
    <div class="ui grid">
            <% blogs.forEach(function(blog){ %>
            <div class="ui four wide column row">
                    <div class="ui middle aligned content ">
                        <h4><%= blog.title %></h4>
                        <a href="/blog/<%=blog.id%>" class="ui small basic button very padded">See full</a> 
                     </div>
                </div>
            <% }) %>

    </div>      
</div>
<%- include ('partials/footer') %>